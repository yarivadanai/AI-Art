{
  "name": "hit-arc",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api start:dev",
    "lint": "pnpm exec eslint . --max-warnings=0",
    "test": "pnpm -r test",
    "test:e2e": "PLAYWRIGHT_SKIP_BROWSER=1 pnpm --filter web test:e2e",
    "prisma:generate": "pnpm --filter api exec prisma generate",
    "prisma:push": "pnpm --filter api exec prisma migrate dev",
    "prisma:migrate": "pnpm --filter api exec prisma migrate deploy",
    "format": "pnpm exec prettier --check ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "typescript": "^5.4.5"
  }
}
