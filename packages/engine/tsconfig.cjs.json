{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist-cjs",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "dist-cjs", "node_modules", "**/*.spec.ts"]
}
