generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id             String     @id @default(cuid())
  seed           String
  startedAt      DateTime   @default(now())
  expiresAt      DateTime
  includesCoding Boolean    @default(false)
  questions      Question[]
  responses      Response[]
  result         Result?
}

model Question {
  id        String     @id @default(cuid())
  sessionId String
  section   String
  index     Int
  type      String
  payload   Json
  answerKey Json
  session   Session    @relation(fields: [sessionId], references: [id])
  responses Response[]

  @@index([sessionId])
}

model Response {
  id         String   @id @default(cuid())
  questionId String
  sessionId  String
  answer     Json
  correct    Boolean
  score      Float    @default(0)
  timeMs     Int
  question   Question @relation(fields: [questionId], references: [id])
  session    Session  @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
  @@index([questionId])
}

model Result {
  id            String   @id @default(cuid())
  sessionId     String   @unique
  sectionScores Json
  overall       Float
  verdict       String
  commentary    Json
  session       Session  @relation(fields: [sessionId], references: [id])
  createdAt     DateTime @default(now())
}
